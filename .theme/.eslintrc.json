{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:nuxt/recommended",
    "plugin:vue/recommended",
    "@nuxtjs/eslint-config-typescript"
  ],
  "overrides": [
    {
      "files": [
        "**/*.{ts,js,json,vue}"
      ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "json-format"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "keyword-spacing": "off",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": "error",
    "no-return-assign": "off",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": "off",
    "vue/multi-word-component-names": "off",
    "vue/html-quotes": [
      "error",
      "double"
    ]
  },
  "settings": {
    "json/ignore-files": [
      "**/package-lock.json"
    ],
    "json/json-with-comments-files": [
      "**/tsconfig.json",
      ".vscode/**"
    ]
  },
  "globals": {
    "$nuxt": true
  }
}
